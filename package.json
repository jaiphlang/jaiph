{
  "name": "jaiph",
  "version": "0.2.0",
  "private": true,
  "description": "jaiph compiler/transpiler",
  "type": "commonjs",
  "bin": {
    "jaiph": "dist/src/cli.js"
  },
  "scripts": {
    "build": "node ./node_modules/typescript/bin/tsc -p tsconfig.json && node -e \"require('node:fs').copyFileSync('src/jaiph_stdlib.sh','dist/src/jaiph_stdlib.sh')\"",
    "test": "npm run build && node --test dist/test/sample-build.test.js",
    "test:jest": "npm run build && jest --runInBand test/fixtures-build.jest.test.js",
    "test:e2e": "bash ./e2e/ci.sh"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "jest": "^30.2.0",
    "typescript": "^5.9.2"
  }
}
